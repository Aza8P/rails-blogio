
<div id="<%= dom_id article %>" class="container">
  <div class="card justify-content-center">
    <div class="card-body">
      <h5 class="card-title"> <%= article.title %></h5>
      <p class="card-text">
        <%= article.published_at %>
      by <%= @author %>
      </p>
      <p class="card-text">
        <%= article.content %> 
      </p>
    </div>
  </div>
</div>

