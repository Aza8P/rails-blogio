<div>
  <div class="navbar navbar-expand-sm navbar-light navbar-custom">
    <div class="container-fluid">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "Blogio.png" %>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <% if current_user.avatar.attached? %>
                <%= image_tag url_for(current_user.avatar), class: "avatar", alt: "user avatar" %>
              <% else %>
                <%= image_tag "avatar.png", class: "avatar", alt: "default avatar" %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "My Articles", articles_path(my_articles: true), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Write Article", new_article_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

